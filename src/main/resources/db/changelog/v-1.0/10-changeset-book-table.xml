<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="3" author="IvanB">


        <createTable tableName="book">

            <column name="id" type="BIGSERIAL">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="title" type="VARCHAR(240)">
                <constraints nullable="false"/>
            </column>

            <column name="price" type="DECIMAL(20, 2)">
            </column>

            <column name="image_url" type="VARCHAR(244)">
                <constraints nullable="false"/>
            </column>

            <column name="tag" type="VARCHAR(244)">
                <constraints nullable="false"/>
            </column>

            <column name="author_id" type="BIGSERIAL">
                <constraints references="author (id)" foreignKeyName="fk_book_author_id"/>
            </column>

            <column name="created_at" type="timestamp">
                <constraints nullable="false"/>
            </column>

            <column name="updated_at" type="timestamp">
                <constraints nullable="false"/>
            </column>

        </createTable>

    </changeSet>

</databaseChangeLog>